@model _20T1020637.DomainModels.Employee


@{
    ViewBag.Title = $"Xoá {Model.FirstName}";
}


<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ảnh:</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo"
                         alt="User profile picture"
                         class="img-thumbnail"
                         style="margin: 0; width: 140px; height: 160px; object-fit: cover;" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Họ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>

                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Chú thích:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>

                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
   
                    @if (!_20T1020637.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>

                    }
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



