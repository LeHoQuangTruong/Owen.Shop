@model _20T1020637.DomainModels.Employee

@{
}


<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName,
                            new { @class = "form-control", @placeholder = "Nhập họ", @autoforcus = "autoforcus" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName,
                        new { @class = "form-control", @placeholder = "Nhập tên", @autoforcus = "autoforcus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                <div class="col-sm-10">

                    <input type="text"
                           class="form-control"
                           id="birthday"
                           name="birthday"
                           value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)" />

                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                    @Html.HiddenFor(m => m.BirthDate)
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email,
                            new { @class = "form-control", @placeholder = "Nhập Email", @autoforcus = "autoforcus" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes,
                         new { @class = "form-control", @placeholder = "Nhập ghi chú", @autoforcus = "autoforcus" })
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2"> Ảnh:</label>
                <div class="col-sm-10">
                    <div>
                        <small><i>Click để chọn ảnh</i></small>
                    </div>
                    <div class="input-group">
                        @Html.HiddenFor(m => m.Photo)
                        <label for="uploadPhoto" style="cursor:pointer" title="Click để chọn ảnh">
                            <img id="employeeImage" src="@(Model.Photo != null ? Model.Photo : "/Uploads/thumbnail.jpg")" class="img-thumbnail" style="width: 140px; height: 160px; object-fit: cover" alt="employeeImage">
                        </label>
                        <input type="file" id="uploadPhoto" name="uploadPhoto" accept="image/*" style="display:none"
                               onchange="document.getElementById('employeeImage').src = window.URL.createObjectURL(this.files[0])" />
                    </div>
                    @Html.ValidationMessageFor(m => m.Photo, "", new
                    {
                         @style = "color:#f00"
                     })
                </div>
            </div>

            <div class="form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


