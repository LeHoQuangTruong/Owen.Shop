@model _20T1020637.DomainModels.ProductAttribute

@{
    ViewBag.Title = "Bổ sung thuộc tính hàng hoá";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AttributeID)
            @Html.HiddenFor(m => m.ProductID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeName,
                   new
                        {
                            @class = "form-control",
                            @autofocus = "autofocus",
                            @placeholder = "Nhập tên thuộc tính"
                   })
                    @Html.ValidationMessageFor(m => m.AttributeName, "", new { @style = " color:#f00 " })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeValue,
                   new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập giá trị thuộc tính" })
                    @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @style = " color:#f00 " })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @if (Model.DisplayOrder != 0)
                    {

                        <input type="text" id="DisplayOrder" class="form-control" name="DisplayOrder"
                               value=@Model.DisplayOrder placeholder="" autofocus />
                    }
                    else
                    {
                        <input type="text" id="DisplayOrder" class="form-control"
                               name="DisplayOrder" placeholder="Thêm thứ tự hiển thị" autofocus />
                    }
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = " color:#f00 " })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>


