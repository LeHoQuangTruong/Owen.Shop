@model _20T1020637.DomainModels.Category

@{
    ViewBag.Title = $"Xoá {Model.CategoryName}";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên loại hàng: </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!_20T1020637.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>

                    }
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>





