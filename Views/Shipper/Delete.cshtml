@model _20T1020637.DomainModels.Shipper
@{
    ViewBag.Title = $"Xoá {Model.ShipperID}";
}


<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên nhân viên giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!_20T1020637.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                    {
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>

                    }
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>




